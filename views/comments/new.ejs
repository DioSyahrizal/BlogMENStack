<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 class="text-center">Comment a Campground <%= campground.name %> </h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campground/<%= campground._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="comment">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[author]" placeholder="author">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
                </div>
            </form>
            <a href="/campground">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>