<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 class="text-center">Edit Comment on a Campground </h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campground/<%= campground_id %>/comments/<%= comment._id %>/?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
                </div>
            </form>
            <a href="/campground">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>