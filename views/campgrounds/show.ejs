<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= campground.image %>" alt="">
                <div class="caption-full">
                    <h4 class="pull-right">$9.00/Night</h4>
                    <h4><a href="#">
                            <%= campground.name %></a></h4>
                    <p>
                        <%= campground.description %>
                    </p>
                    <p>
                        <em>Submitted by:
                            <%= campground.author.username %></em>
                    </p>
                    <% if (currentUser && campground.author.id.equals(currentUser._id)){%>
                    <a href="/campground/<%= campground.id %>/edit" class="btn btn-warning">Edit</a>
                    <form class="delete-form" action="/campground/<%= campground._id %>?_method=DELETE" method="POST">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                    <% } %>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/campground/<%= campground._id %>/comments/new">Add new comment</a>
                </div>
                <hr>
                <% campground.comments.forEach(function(comment){ %>
                <div class="row">
                    <div class="col-md-12">
                        <strong>
                            <%= comment.author.username %></strong>
                        <span class="pull-right">10 Days ago</span>
                        <p>
                            <%=comment.text %>
                        </p>
                        <a href="/campground/<%= campground._id %>/comments/<%= comment._id %>/edit" class="btn btn-xs btn-warning">Edit</a>
                        <form class="delete-form" action="/campground/<%= campground._id %>/comments/<%= comment._id %>?_method=DELETE" method="POST">
                            <button type="submit" class="btn btn-xs btn-danger">Delete</button>
                        </form>
                    </div>
                </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>



<% include ../partials/footer %>